@model Arbetsprov.Features.Shared.PageBase

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-light bg-light mb-lg-4 mt-3">
        <div class="container">
            <h1 class="navbar-brand mb-0">@Html.ActionLink("Music recommendations", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</h1>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/vendors")
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
